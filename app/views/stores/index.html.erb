<div>
<%= render "shared/searchbar" %>
</div>


<div class="container">
  <h2>Missing something for your meal? See whats on offer for...</h2>
  <div class="store-cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1509365465985-25d11c17e812?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
     <h3 class="suggestion-text">Breakfast</h3>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1478998674531-cb7d22e769df?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)">
     <h3 class="suggestion-text">Lunch</h3>
    </div>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(https://images.unsplash.com/photo-1519708227418-c8fd9a32b7a2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)">
      <h3 class="suggestion-text">Dinner</h3>
    </div>
  </div>
</div>

<div class="container">
  <h2>All stores near you</h2>
  <% @stores.each do |store| %>
    <div class="store-title">
      <h3> <%= link_to store.name, store_path(store.id), class: "store-name" %></h3>
    <p class="store-address"> <%= store.address %> </p></div>
  <div class="card-product">
    <div class="store-items">
       <% store.items.each do |item| %>
    <div class="card-item">
      <% if item.photo.attached? %>
        <%= cl_image_tag item.photo.key, class: "card-image" %>
      <% else %>
        <img class="card-image" src="https://images.unsplash.com/photo-1551462147-37885acc36f1?ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" alt="image">
      <% end %>
        <div class="store-body">
          <div class="item-name" ><%= item.name %></div>
          <s>Original Price:<%= number_to_currency(item.price, unit: "£") %></s>
          <br>
          <strong> New Price: <%= number_to_currency(item.discounted_price, unit: "£") %></strong>
          <%= link_to "Add to Basket", create_order_path(item.id), method: :post, class: "btn-basket" %>
          <i class="fas fa-shopping-basket"></i>
        </div>
    </div>
    <% end %>
    </div>
  </div>
  <% end %>
</div>



